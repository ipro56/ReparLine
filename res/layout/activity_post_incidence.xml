<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.droidstore.reparline.activities.PostIncidence"
    tools:ignore="MergeRootFrame" >

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/inputTitleNewIncidence"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="start"
        android:hint="@string/hintTitleIncidence"
        android:maxLength="100"
        android:textSize="18sp"
        android:textStyle="bold"
        bootstrapbutton:be_roundedCorners="true"
        bootstrapbutton:be_state="primary" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/inputDescriptionNewIncidence"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:gravity="start"
        android:hint="@string/hintDescriptionIncidence"
        android:inputType="textMultiLine"
        android:maxLength="1500"
        android:textSize="17sp"
        bootstrapbutton:be_roundedCorners="true"
        bootstrapbutton:be_state="primary" />

</LinearLayout>